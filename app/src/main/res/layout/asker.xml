<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:background="#363636"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="\?"
            android:textSize="100dp"
            android:layout_weight="3"
            android:textColor="#f30009"
            android:id="@+id/questionIcon"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="\nแม่นำ้เจ้าพระยา มีกี่่สาย?"
            android:id="@+id/questionText"
            android:textSize="45dp"
            android:textAlignment="center"
            android:textColor="@color/primary_text_default_material_dark"
            />
        <info.hoang8f.widget.FButton
            android:text="UNLOCK CHOICES"
            android:id="@+id/readyBtn"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:textColor="@color/primary_material_light"
            fbutton:buttonColor="@color/fbutton_color_pomegranate"
            fbutton:shadowColor="@color/fbutton_color_alizarin"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="10dp"
            android:textSize="30dp"
            />






    </LinearLayout>






</RelativeLayout>