<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cnr.partlinkclient.QAActivity"
    android:background="#363636">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="2"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"

        >

        <info.hoang8f.widget.FButton
            android:text="1"
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textSize="50dp"
            fbutton:buttonColor="@color/fbutton_color_lightblue"
            fbutton:shadowColor="@color/fbutton_color_darkblue"
            fbutton:cornerRadius="30dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="20dp" />

        <info.hoang8f.widget.FButton
            android:text="3"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textSize="50dp"
            fbutton:buttonColor="@color/fbutton_color_amethyst"
            fbutton:shadowColor="@color/fbutton_color_wisteria"
            fbutton:cornerRadius="30dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <info.hoang8f.widget.FButton
            android:text="4"
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textSize="50dp"
            fbutton:buttonColor="@color/fbutton_color_turquoise"
            fbutton:shadowColor="@color/fbutton_color_green_sea"
            fbutton:cornerRadius="30dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="20dp" />

        <info.hoang8f.widget.FButton
            android:text="2"
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textSize="50dp"
            fbutton:buttonColor="@color/fbutton_color_lightyellow"
            fbutton:shadowColor="@color/fbutton_color_darkyellow"
            fbutton:cornerRadius="30dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="20dp" />

    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/listenTv"
        android:textColor="@color/primary_text_default_material_dark"
        android:gravity="center"
        android:text="WAITING FOR CHOICES.."
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>