<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cnr.partlinkclient.EndActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/red_bg"
        android:paddingBottom="200dp"
        android:paddingRight="100dp"
        android:layout_above="@+id/linearLayout3" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blue_bg"
        android:paddingLeft="150dp"
        android:paddingTop="200dp"
        android:layout_above="@+id/linearLayout3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:id="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="fitStart"
            android:src="@drawable/partylink_logo" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">
        <info.hoang8f.widget.FButton
            android:text="CONFIRM"
            android:id="@+id/nextGame"
            android:layout_width="wrap_content"
            android:textColor="@color/primary_material_light"
            android:layout_height="100dp"
            android:layout_weight="1"
            fbutton:buttonColor="@color/fbutton_color_pomegranate"
            fbutton:shadowColor="@color/fbutton_color_alizarin"
            fbutton:cornerRadius="30dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>


</RelativeLayout>
